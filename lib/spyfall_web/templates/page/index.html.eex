<div class="px-16 py-12 bg-white rounded shadow mx-auto max-w-sm w-sm">
  <div class="mb-6">
    <h1 class="text-2xl text-gray-900 font-light">Welcome to Spyfall</h1>
  </div>
  <%= if(@in_game?) do %>
  <div class="mb-4">
    <a href='<%= Routes.game_path(@conn, :join_new, join_previous: true) %>'>
      <button class="indigo-button w-3/4">Join Previous Game</button>
    </a>
  </div>
  <% end %>
  <div class="buttons mb-4 ">
    <a href='<%= Routes.game_path(@conn, :new) %>'>
      <button class="indigo-button mr-2">New Game</button>
    </a>
    <a href='<%= Routes.game_path(@conn, :join_new) %>'>
      <button class="indigo-button">Join Game</button>
    </a>
  </div>
  <div class="rules mb-4">
  </div>
</div>
